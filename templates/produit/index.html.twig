{% extends 'layout/layout.front.html.twig' %}

{% block title %} Liste des produits {% endblock %}

{% block body %}
    <div class="container">
        <!-- Début du contenu de la page -->
        <div class="card">
            <!-- Début du titre du contenu de la page -->
            <div class="card-header">
                <div class="row">
                    <h1 class="col">Liste des produits</h1>
                    <div class="col-1 my-auto">
                        <a class="text-decoration-none" href="{{ path('produit_new') }}"><i class="fas fa-plus-circle fa-lg"></i></a>
                    </div>
                </div>
            </div>
            <!-- Fin du titre du contenu de la page -->

            <!-- Début du contenu -->
            <table class="table card-body">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Libelle</th>
                    <th>Catégorie</th>
                    <th>Prix</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for produit in produits %}
                    <tr>
                        <td>{{ produit.id }}</td>
                        <td>{{ produit.libelle }}</td>
                        <td>{{ produit.categorie.nom }}</td>
                        <td>{{ produit.prix }}</td>
                        <td>
                            <a href="{{ path('produit_show', {'id': produit.id}) }}"><i class="fas fa-eye"></i></a>
                            <a href="{{ path('produit_edit', {'id': produit.id}) }}"><i class="fas fa-edit"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">Aucun enregistrement</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <!-- Fin du contenu -->
        </div>
        <!-- Fin du contenu de la page -->
    </div>
{% endblock %}